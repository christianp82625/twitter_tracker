<% scripts.push('/js/search-dashboard.js') %>

<div style="position:fixed; bottom: 50px; right: 50px; display:none;" id="lazy-loader">
	<img src="/img/loader.gif" />
</div>

<input type="hidden" id="search_client_data" value="" name="search_client_data" />
<div class="container">
    <div class="row">
        <div class="span12">
            <div class="content">
                <div class="searhbox">
                    <p id="search-status-message"></p>
                    <div class="row-fluid">
                        <div class="span12">
                            <form class="form-horizontal" onsubmit="return false;">
                                <fieldset>
                                    <div class="control-group">
                                        <label class="control-label" for="input01">Search</label>
                                        <div class="controls">
                                            <input type="text" class="input-xlarge searhbox-input" id="input01">
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <form class="form-horizontal">
                                <fieldset>
                                    <div class="control-group">
                                        <label class="control-label" for="search-keyword-list">Keyword</label>
                                        <div class="controls">
                                            <select  data-placeholder="Choose a keyword" class="chosen-select keywords-select" id="search-keyword-list">
                                                <option></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="search-date-from">Date</label>
                                        <div class="controls">
                                            <input type="text" id="search-date-from" class="searhbox-input date datepicker" placeholder="--/-- /--" />
                                            <div class="calender">
                                                <img src="img/calender.png" width="18" height="18" />
                                            </div>
                                            <div class="date-name">&#126;</div>
                                            <input type="text" id="search-date-to" class="searhbox-input date datepicker" placeholder="--/-- /--" />
                                            <div class="calender">
                                                <img src="img/calender.png" width="18" height="18" />
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        
                        <div class="span6">
                            <form class="form-horizontal">
                                <fieldset>
                                    <div class="control-group">
                                        <label class="control-label" for="inlineRadios">sentiments</label>
                                        <div class="controls">
                                            <label class="radio inline">
                                                <input type="radio" name="search-sentiment" value="all"> All
                                            </label>
                                            <label class="radio inline">
                                                <input type="radio" name="search-sentiment" value="positive"> Positive
                                            </label>
                                            <label class="radio inline">
                                                <input type="radio" name="search-sentiment" value="negative"> Negative
                                            </label>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="search-has-retweets"></label>
                                        <div class="controls">
                                          <label class="checkbox">
                                            <input type="checkbox" id="search-has-retweets" name="search-has-retweets" value="1">
                                            Only Show Results with retweets
                                          </label>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <a href="#" class="header-search" id="do-search-button">Search</a>
                        </div>
                    </div>         
                </div>
            </div>
        </div>
    </div>
    
	<div class="row"> 
		
		<!----------Search------------>
		
		<div class="span12">
			<div class="content">
                
				<div class="search-head" style="margin-left:205px">
					<!--<div class="search-head-text">
						<h3>
							Result for Keyword:<span id="results-keyword-span">...</span>
						</h3>
					</div>-->
					<div class="search-head-text">
						<h3>
							Tweets Found:<span id="tweets-found-span">...</span>
						</h3>
					</div>
					<div class="search-head-text">
						<h3>
							Retweets found:<span id="retweets-found-span">...</span>
						</h3>
					</div>
				</div>

				<div id="search-content" class="scroll-block tweet new">
					<ul class="search">						
					</ul>
				</div>
                
			</div>
		</div>
        
	</div>
</div>